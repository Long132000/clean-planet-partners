<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp"
    android:layout_margin="4dp"
    android:elevation="2dp">

    <TextView
        android:id="@+id/textServiceDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Дата"
        android:textSize="14sp"
        android:textColor="#00CED1"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textServicePartner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Партнер"
        android:textSize="12sp"
        android:textColor="#666666" />

    <TextView
        android:id="@+id/textServiceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Услуга"
        android:textSize="14sp"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/textServiceQuantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Количество: 0"
            android:textSize="12sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textServicePrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Стоимость: 0 руб."
            android:textSize="12sp"
            android:textColor="#000000"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>